<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/zzimg_iniciodesesion_frisalogo"
            android:layout_marginTop="110dp"
            android:layout_marginStart="0dp"
            >
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/zzimg_iniciodesesion_frisanombre"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            >
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido de vuelta!"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:background="@drawable/boton"
        android:backgroundTint="#C63636"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"

        android:id="@+id/idsbutton"
        android:clickable="true"
        android:focusable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Iniciar Sesión"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/regbutton"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:background="@drawable/boton"
        android:backgroundTint="#606060"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Registrarse"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginStart="0dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar como invitado"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:textColor="#898989"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>


</LinearLayout>