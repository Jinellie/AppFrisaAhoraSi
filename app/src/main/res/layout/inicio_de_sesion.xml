<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/zzimg_iniciodesesion_frisalogo"
            android:layout_marginTop="110dp"
            android:layout_marginStart="0dp"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/zzimg_iniciodesesion_frisanombre"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            >
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido de vuelta!"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>
    <!--- INICIAR SESIÓN -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/boton"
        android:backgroundTint="#C63636"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"

        android:id="@+id/idsbutton"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        android:contentDescription="Botón de Inicio de Sesión"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Iniciar Sesión"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginStart="0dp"
            />

    </LinearLayout>
    <!---       REGISTRO        -->
    <Button
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:id="@+id/BtnIniciarRegistro"
        android:background="@drawable/boton"
        android:backgroundTint="#606060"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:onClick="navigateIniciarRegistro"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />
    <!-- Entrar como invitado -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Entrar como invitado"
        android:textSize="15sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        android:background="#FFFFFF"
        />

</LinearLayout>