<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#C63636"> <!-- Color Rojo Nav Bar -->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/zzimg_plantilla_tresbarras"
            android:layout_marginStart="0dp">
            >
        </ImageView>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:background="@drawable/nav_bar_blanco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp">
            <!-- app:layout_constraintTop_toTopOf="parent" -->
            <!--android:layout_marginTop="50dp"-->


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/zzimg_plantilla_busquedarojo"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                >
            </ImageView>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="662dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/nav_bar_blanco">
        <!-- app:layout_constraintTop_toTopOf="parent" -->
        <!--android:layout_marginTop="50dp"-->

        <Button
            android:id="@+id/shareButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/zzimg_compartiroscinfo_compartiricono"
            android:backgroundTint="#C63636"

            android:text="Compartir"
            android:fontFamily="sans-serif"
            android:textSize="17dp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="-200dp"
            android:layout_marginStart="150dp"

            android:onClick="shareLink"
            />

    </LinearLayout>


</LinearLayout>