<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:background="@drawable/nav_bar_blanco"
        android:backgroundTint="#C63636"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escoger Pantallas"
            android:fontFamily="sans-serif-medium"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iniciodesesionenter"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/inicio_de_sesion_fondoarriba"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="-400dp"
        android:layout_marginStart="0dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Iniciar sesiÃ³n"
            android:fontFamily="sans-serif-medium"
            android:textSize="25sp"
            android:textColor="#525252"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/compartirenter"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/inicio_de_sesion_fondoarriba"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Compartir"
            android:fontFamily="sans-serif-medium"
            android:textSize="25sp"
            android:textColor="#525252"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/historialenter"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/inicio_de_sesion_fondoarriba"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Historial"
            android:fontFamily="sans-serif-medium"
            android:textSize="25sp"
            android:textColor="#525252"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>


</LinearLayout>