<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#C63636"> <!-- Color Rojo Nav Bar -->

        <ImageView
            android:id="@+id/tresBarras"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/zzimg_plantilla_tresbarras"
            android:layout_marginStart="0dp">
            >
        </ImageView>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:background="@drawable/nav_bar_blanco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp">
            <!-- app:layout_constraintTop_toTopOf="parent" -->
            <!--android:layout_marginTop="50dp"-->

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:hint="Buscar"
                android:textSize="15sp"
                android:textColor="#767676"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="10dp"
                />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/zzimg_plantilla_busquedarojo"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"

                android:clickable="true"
                android:focusable="true"
                android:padding="0dp"
                android:contentDescription="Botón de búsqueda"
                >
            </ImageView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBaseline_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/red">
        <LinearLayout
            android:id="@+id/favsPubs"
            android:contentDescription="Enter How Much Cookies You Want"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/otroFavs"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community" />
            <ImageView
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_empty"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Orgs"
            android:contentDescription="Enter How Much Cookies You Want"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/squares" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:src="@drawable/line" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>