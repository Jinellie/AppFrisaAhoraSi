<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/navigation_b"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#C63636"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintBaseline_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/toolbar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Icon"
            android:src="@drawable/nav_bar" />

        <LinearLayout
            android:layout_width="276dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_search_view"
            android:layout_marginLeft="31dp">


            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="Buscar..."
                android:layout_weight="1"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/dd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"

                android:layout_gravity="center"
                android:contentDescription="Icon"
                android:src="@drawable/baseline_search_24" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@id/navigation_b"
        android:orientation="vertical">


        <ImageView
            android:layout_marginTop="22dp"
            android:id="@+id/circularImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_shape"
            android:clipToOutline="true"
            android:layout_gravity="center"

            android:outlineProvider="background"

            android:scaleType="centerCrop"
            android:src="@drawable/woman"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/Element2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="Sara Martinez Arriola"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/e3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/poppins_light"
            android:text="23 años"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ban_mexico"
            />

            <TextView
                android:id="@+id/e4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"

                android:fontFamily="@font/poppins_light"
                android:text="+52 81 2902 4531"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/e5"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"

            android:fontFamily="@font/poppins_medium"
            android:text="Me encanta trabajar como voluntaria en diversas organizaciones sin fines de lucro. Ya sea ayudando a comunidades desfavorecidas, trabajando en proyectos de conservación ambiental o participando en campañas de concienciación social, siempre estoy dispuesta a dar un paso adelante para marcar la diferencia.

"
            android:textAlignment="center"
            android:textSize="12sp" />

        <GridLayout
            android:paddingVertical="10dp"
            android:id="@+id/tag1"
            android:paddingHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_item" >


            <TextView
                android:id="@+id/e6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_gray"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Psicología"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/e7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"

                android:background="@drawable/rounded_gray"
                android:fontFamily="@font/poppins_medium"
                android:padding="10dp"
                android:text="Autoestima"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/e8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"

                android:background="@drawable/rounded_gray"
                android:fontFamily="@font/poppins_medium"
                android:padding="10dp"
                android:text="Autismo"
                android:textSize="12sp" />
        </GridLayout>
        <GridLayout
            android:id="@+id/tag2"
            android:paddingVertical="10dp"
            android:paddingHorizontal="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_item" >


            <TextView
                android:id="@+id/e9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_gray"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Bienestar"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/e10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"

                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_gray"
                android:fontFamily="@font/poppins_medium"
                android:padding="10dp"
                android:text="Mentalidad"
                android:textSize="12sp" />

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>