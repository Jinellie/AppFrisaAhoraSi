<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#C63636"> <!-- Color Rojo Nav Bar -->

        <ImageView
            android:id="@+id/tresBarras"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/zzimg_plantilla_tresbarras"
            android:layout_marginStart="0dp">
            >
        </ImageView>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:background="@drawable/nav_bar_blanco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp">
            <!-- app:layout_constraintTop_toTopOf="parent" -->
            <!--android:layout_marginTop="50dp"-->

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:hint="Buscar"
                android:textSize="15sp"
                android:textColor="#767676"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="10dp"
                />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/zzimg_plantilla_busquedarojo"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"

                android:clickable="true"
                android:focusable="true"
                android:padding="0dp"
                android:contentDescription="Botón de búsqueda"
                >
            </ImageView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
    >


        <ImageView
            android:layout_marginTop="22dp"
            android:id="@+id/circularImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_shape"
            android:clipToOutline="true"
            android:layout_gravity="center"

            android:outlineProvider="background"

            android:scaleType="centerCrop"
            android:src="@drawable/profpic"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/Element2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"

            android:fontFamily="sans-serif-black"
            android:text="Adrián Tadeo Barrera Almanza"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/e3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="sans-serif"
            android:text="20 años"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ban_mexico"
            />

            <TextView
                android:id="@+id/e4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"

                android:fontFamily="sans-serif"
                android:text="+52 81 1797 5841"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/e5"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif-medium"
            android:text="Me encanta trabajar como voluntario en diversas organizaciones sin fines de lucro."
            android:textAlignment="center"
            android:textSize="12sp" />

        <GridLayout
            android:paddingVertical="10dp"
            android:id="@+id/tag1"
            android:paddingHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_item" >


            <TextView
                android:id="@+id/e6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_gray"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Ambientalistas"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/e7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"

                android:background="@drawable/rounded_gray"
                android:fontFamily="sans-serif-medium"
                android:padding="10dp"
                android:text="Medicina"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/e8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"

                android:background="@drawable/rounded_gray"
                android:fontFamily="sans-serif-medium"
                android:padding="10dp"
                android:text="Autismo"
                android:textSize="12sp" />
        </GridLayout>
        <GridLayout
            android:id="@+id/tag2"
            android:paddingVertical="10dp"
            android:paddingHorizontal="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_item" >


            <TextView
                android:id="@+id/e9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_gray"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Discapacidad"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/e10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"

                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_gray"
                android:fontFamily="sans-serif-medium"
                android:padding="10dp"
                android:text="Salud"
                android:textSize="12sp" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>