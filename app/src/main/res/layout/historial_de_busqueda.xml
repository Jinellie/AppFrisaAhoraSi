<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#C63636"> <!-- Color Rojo Nav Bar -->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/zzimg_plantilla_tresbarras"
            android:layout_marginStart="0dp">
            >
        </ImageView>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:background="@drawable/nav_bar_blanco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp">
            <!-- app:layout_constraintTop_toTopOf="parent" -->
            <!--android:layout_marginTop="50dp"-->

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:hint="Buscar"
                android:textSize="15sp"
                android:textColor="#767676"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="10dp"
                />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/zzimg_plantilla_busquedarojo"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"

                android:clickable="true"
                android:focusable="true"
                android:padding="0dp"
                android:contentDescription="Botón de búsqueda"
                >
            </ImageView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/historialLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="#888888"
        android:orientation="horizontal">
        <!-- app:layout_constraintTop_toTopOf="parent" -->
        <!--android:layout_marginTop="50dp"-->



    </LinearLayout>





</LinearLayout>